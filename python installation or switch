# To check the version of python
python --version 
# if version is pyhton 2 uninstall and install pyhton 3
# Unsinstall
sudo apt-get purge python2.7 -minimal

sudo apt update 

sudo apt - upgrade 

#checking if its gone
python --version 

# python 3 installtion 
sudo apt-get install python3

#adding basc tools
sudo apt install -y python3-pip

sudo apt install -y python3-dev 

--------------------------------------------------------------------------------
#How to switch between python 2 and python 3 if both are installed.
# define both python 

sudo update-alternatives --install /usr/bin/python python /usr/bin/python2.7 1

sudo update-alternatives --install /usr/bin/python python /usr/bin/python3.6 2

# set default version 
sudo update-alternatives --set python /usr/bin/python3.6

or 

sudo update-alternatives --config python3 



